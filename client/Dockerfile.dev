FROM node:20-alpine

# Copy everything from the build context
COPY . /app/

# Set working directory to the client subfolder
WORKDIR /app/client

# Install dependencies
RUN npm install

# Expose port (Webpack dev server uses 8080)
EXPOSE 8080

# Start Webpack development server with host binding for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
